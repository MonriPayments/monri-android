<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentPickerActivity">

    <LinearLayout
        android:id="@+id/payment_picker_new_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <com.monri.android.view.CardMultilineWidget
            android:id="@+id/payment_picker_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextLabel" />

        <Button
            android:id="@+id/payment_picker_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_main_btn_pay" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/or" />

        <Button
            android:id="@+id/continue_with_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_crypto_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/direct_payment" />

        <TextView
            android:id="@+id/txt_result_payment_example"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            tools:text="jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_picker_saved_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_masked_pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_cvv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_cvv"
            android:inputType="number"
            android:autofillHints="creditCardSecurityCode" />

        <Button
            android:id="@+id/btn_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/content_main_btn_pay" />

        <TextView
            android:id="@+id/txt_result_payment_example_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="20dp"
            tools:text="jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text jako dugi text" />

    </LinearLayout>
</FrameLayout>
